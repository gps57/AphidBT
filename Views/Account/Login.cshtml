@using AphidBT.Models

@model LoginViewModel

@{
  Layout = null;
  ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <!-- Favicon icon -->
  <link rel="icon" type="image/png" sizes="16x16" href="~/favicon.ico">
  <title>Aphid BT - The ultimate Bug Tracker</title>

  <!-- Bootstrap Core CSS -->
  <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom CSS -->
  <link href="~/Content/style.css" rel="stylesheet" />

  <!-- You can change the theme colors from here -->
  <link href="~/Content/blue.css" rel="stylesheet" />

  <link href="~/Content/pages.css" rel="stylesheet" />

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

</head>

<body>
  <!-- ============================================================== -->
  <!-- Preloader - style you can find in spinners.css -->
  <!-- ============================================================== -->
  <div class="preloader">
    <svg class="circular" viewBox="25 25 50 50">
      <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
    </svg>
  </div>

  <!-- ============================================================== -->
  <!-- Main wrapper with content
  <!-- ============================================================== -->
  <section id="wrapper">
    <div class="login-register" style="background-image: url(/Images/login-register.jpg);">
      <div class="login-box card">
        <div class="card-body">
          <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-material", id = "loginform", role = "form" }))
            {
              @Html.AntiForgeryToken()
              <div class="row justify-content-between align-content-center">
                <div class="col-5 align-self-center">
                  <h3 class="box-title">Sign In</h3>
                </div>
                <div class="col-2 m-b-20">
                  <img src="~/Images/aphid-icon_40x40-96.png" />
                </div>
              </div>
              @Html.ValidationSummary(true, "", new { @class = "text-danger" })

              <div class="form-group">
                <div class="col-xs-12">
                  <input class="form-control" type="text" placeholder="Username" name="email" />
                  @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Username" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-12">
                  <input class="form-control" type="password" placeholder="Password" name="password" />
                  @*@Html.PasswordFor(m => m.Email, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                </div>
              </div>

              <div class="form-group row">
                <div class="col-md-12 font-14">
                  <div class="checkbox checkbox-primary pull-left p-t-0">
                    <input id="checkbox-signup" type="checkbox" />
                    <label for="checkbox-signup"> Remember me </label>
                  </div>
                  @Html.ActionLink("Forgot pwd?", "ForgotPassword", "Account", null, new { @class = "text-dark pull-right" })
                </div>
              </div>

              <div class="form-group text-center m-t-20">
                <div class="col-xs-12">
                  <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                </div>
              </div>
              <hr />
              <div class="form-group m-b-0">
                <div class="col-sm-12 text-center mb-1">
                  <div>
                    Don't have an account?
                    @Html.ActionLink("Sign Up", "Register", "Account", null, new { @class = "text-info m-l-5" })
                  </div>
                </div>
              </div>

              <div class="form-group m-b-0">
                <div class="col-sm-12 text-center">
                  <div>
                    Try a demo login?
                    @Html.ActionLink("Demo Login", "DemoLogin", "Account", null, new { @class = "text-info m-l-5" })
                  </div>
                </div>
              </div>
            }
          </section>
          <hr />
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 m-t-10 text-center">
              <h5>Authenticate with a social account?</h5>
              <div class="social">
                <section id="socialLoginForm">
                  @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
  <!-- ============================================================== -->
  <!-- End Main wrapper and content -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Scripts -->
  <!-- ============================================================== -->
  <script src="~/Scripts/jquery.min.js"></script>
  <script src="~/Scripts/popper.min.js"></script>
  <script src="~/Scripts/bootstrap.min.js"></script>
  <script src="~/Scripts/jquery.slimscroll.js"></script>
  <script src="~/Scripts/waves.js"></script>
  <script src="~/Scripts/sidebarmenu.js"></script>
  <script src="~/Scripts/sticky-kit.min.js"></script>
  <script src="~/Scripts/jquery.sparkline.min.js"></script>
  <script src="~/Scripts/custom.min.js"></script>
  <script src="~/Scripts/jQuery.style.switcher.js"></script>
  <script src="~/Scripts/owl.carousel.min.js"></script>

</body>

</html>
