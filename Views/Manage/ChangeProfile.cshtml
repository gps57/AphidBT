@using AphidBT.Models

@model ChangeProfileViewModel

@{
    ViewBag.Title = "ChangeProfile";
}

<h2>Change Profile</h2>

<div class="container">
  <div class="row">

    @using (Html.BeginForm("ChangeProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
      @Html.AntiForgeryToken()
      <h4>Change Profile Form</h4>
      <hr />
      @Html.ValidationSummary("", new { @class = "text-danger" })

      <!-- First name entry field -->
      <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
      </div>

      <!-- Last name field -->
      <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
      </div>

      <!-- Email entry field -->
      <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
      </div>

      <!-- Submit control-->
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <input type="submit" value="Change profile" class="btn btn-default" />
        </div>
      </div>

    }

  </div>
</div>

