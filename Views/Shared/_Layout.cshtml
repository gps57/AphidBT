                    <li>
                      <div class="drop-title">Unread Notifications</div>
                    </li>
                    <li>
                      <div class="message-center">
                        @foreach (var notifies in unreadNotifications)
                        {
                          @*<a href="@Url.Action("Manage", "Users", new { userId = item.Id })">*@
